{
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": "master",
      "registry": "https://registry.npmjs.org/"
    }
  },
  "publishConfig": {
    "access": "public",
    "directory": "/dist",
    "registry": "https://registry.npmjs.org/"
  }
}
