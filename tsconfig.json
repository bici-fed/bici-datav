

{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "lib": ["es2018", "dom"],
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports":true,
    "skipLibCheck": true,
    "paths": {
      "@bici-topology/core": ["packages/core"],
      "@bici-topology/core/*": ["packages/core/src/*"],
      "@bici-topology/flow-diagram": ["packages/flow-diagram"],
      "@bici-topology/activity-diagram": ["packages/activity-diagram"],
      "@bici-topology/class-diagram": ["packages/class-diagram"],
      "@bici-topology/sequence-diagram": ["packages/sequence-diagram"],
      "@bici-topology/chart-diagram": ["packages/chart-diagram"],
      "@bici-topology/layout": ["packages/layout"],
      "@bici-topology/editor": ["packages/editor"]
    }
  },
  "typings": "./typings/index.d.ts",
  "include": ["packages/**/*", "typings.d.ts", "./typings/"],
  "exclude": ["node_modules", "lib", "es", "dist", "examples"]
}
